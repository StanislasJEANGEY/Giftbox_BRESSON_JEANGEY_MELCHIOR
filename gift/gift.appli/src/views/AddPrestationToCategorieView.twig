{% extends 'SqueletteView.twig' %}
{% block content %}
    <a href="{{ url_for('prestations_by_categorie', { 'id': idCategorie }) }}"><button>Retour</button></a>
    <h1>Ajouter des Prestations</h1>

    <form action="{{ url_for('add_prestation_to_categorie_post') }}" method="post">
        <ul>
            {% for prestation in prestations %}
                <li>
                    <label>
                        {% if prestation.cat_id == idCategorie %}
                            <input type="checkbox" name="{{prestation.id}}" value="{{ prestation.id }}" checked>
                        {% else %}
                            <input type="checkbox" name="{{prestation.id}}" value="{{ prestation.id }}">
                        {% endif %}
                    </label>
                    <label for="{{ prestation.id }}">{{ prestation.libelle }}</label>
                </li>
            {% endfor %}
        </ul>
        <input type="hidden" id="idCateg" name="idCateg" value="{{ idCategorie }}">
        <input type="submit" value="Modifier">
        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
    </form>

    <br>

    <a href="{{ url_for('add_prestation_get') }}"><button>Cr√©er une prestation</button></a>
{% endblock %}