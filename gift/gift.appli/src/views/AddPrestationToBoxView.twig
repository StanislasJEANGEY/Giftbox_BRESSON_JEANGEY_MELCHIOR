{% extends 'SqueletteView.twig' %}
{% block content %}
    <a href="{{ url_for('prestations_by_box', { 'id': idBox }) }}"><button>Retour</button></a>
    <h1>Ajouter des Prestations</h1>

    <form action="{{ url_for('add_prestation_to_box_post') }}" method="post">
        <ul>
            {% for prestation in prestations %}
                <li>
                    <input type="number" name="{{ prestation.id }}" id="{{ prestation.id }}">
                    <label for="{{ prestation.id }}">{{ prestation.libelle }}</label>
                </li>
            {% endfor %}
        </ul>
        <input type="hidden" name="idBox" value="{{ idBox }}">

        <input type="submit" value="Ajouter">
        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
    </form>

    <br>

    <a href="{{ url_for('add_prestation_get') }}"><button>Cr√©er une prestation</button></a>
{% endblock %}