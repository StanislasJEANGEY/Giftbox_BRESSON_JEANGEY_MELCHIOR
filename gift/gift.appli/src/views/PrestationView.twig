{% extends "SqueletteView.twig" %}
{% block content %}
    <body>
    <div class="container">
        <h1 class="heading">Prestation</h1>
        <div class="sort">
            <div class="sort-by">
                <p>Trier par prix :</p>
            </div>
            <div class="back-button">
                <a href="{{ url_for('prestations', {'tri': 'asc'}) }}"><button>Croissant</button></a>
                <a href="{{ url_for('prestations', {'tri': 'desc'}) }}"><button>Décroissant</button></a>
            </div>
        </div>
        <ul class="box-list">
            {% for prestation in list_presta %}
                <li><a href="{{ url_for('prestation_by_id', { 'id': prestation.id } ) }}">{{ prestation['libelle'] }}</a></li>
                <br>
            {% endfor %}
        </ul>
        <div class="create-button">
            <a href="{{ url_for('add_prestation_get') }}"><button>Créer une nouvelle prestation</button></a>
        </div>
    </div>
    </body>
{% endblock %}
