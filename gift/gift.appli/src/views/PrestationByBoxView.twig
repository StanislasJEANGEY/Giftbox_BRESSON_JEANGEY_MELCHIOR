{% extends 'SqueletteView.twig' %}
{% block content %}
    <div class="container">
        <center><h1 class="heading">{{box.libelle}}</h1></center>
        <div class="back-button">
            <a href="{{ url_for('box_by_id', { 'id':box.id } ) }}"><button>Retour</button></a>
        </div>
        <div class="list-container">
            <ul>
                {% for presta in liste_presta %}
                    <li>
                        <strong><a href="{{ url_for('prestation_by_id', { 'id':presta.id } ) }}">{{presta.libelle}}</a></strong>
                        <p class="quantity">Quantité : {{ presta.contenu.quantite }}</p>
                    </li>
                {% endfor %}
            </ul>
        </div>
        <h3 class="total-price">Prix Total : <strong>{{ total }} €</strong></h3>
        {%  if admin == true %}
        <div class="add-button">
            <a href="{{ url_for('add_prestation_to_box_get') }}"><button>Ajouter des prestations</button></a>
        </div>
        {% endif %}
    </div>
{% endblock %}
