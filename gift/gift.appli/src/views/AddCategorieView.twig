{% extends "SqueletteView.twig" %}
{% block content %}
    <div class="container">
        <h2 class="heading">Créer une catégorie :</h2>
        <div class="back-button">
            <a href="{{ url_for('categories') }}">
                <button>Retour</button>
            </a>
        </div>
        <form class="gift_form" method="post" action="{{ url_for('add_categorie_post') }}">
            <label for="libelle">Libellé</label>
            <input type="text" id="libelle" name="libelle" required placeholder="libellé">
            <label for="description">Description</label>
            <input type="text" id="description" name="description" required placeholder="description">

            <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
            <input type="submit" value="Enregistrer">
        </form>
    </div>
{% endblock %}
